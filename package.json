{
  "name": "code-base-nuxt-3",
  "description": "This template should help get you started developing with Nuxt 3 in Vite",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "HXRRY",
    "email": "harrydng1209@gmail.com",
    "url": "https://github.com/harrydng1209"
  },
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.x"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "format": "prettier --write \"**/*.{css,html,js,jsx,json,md,scss,ts,tsx,vue}\"",
    "lint": "eslint . --ext .cjs,.js,.jsx,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "type-check": "vue-tsc --build --force",
    "check-all": "run-p format lint type-check",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky",
    "precommit": "lint-staged && validate-branch-name"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "pnpm run format",
      "pnpm run lint",
      "git add ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(feature|bugfix|hotfix|release)/.+|(master)$"
  },
  "dependencies": {
    "@casl/ability": "^6.7.2",
    "@casl/vue": "^2.2.2",
    "@element-plus/nuxt": "^1.1.1",
    "@nuxtjs/i18n": "^9.1.1",
    "@pinia/nuxt": "^0.7.0",
    "@vee-validate/nuxt": "^4.14.7",
    "@vee-validate/yup": "^4.14.7",
    "@vueuse/core": "^10.9.0",
    "@vueuse/shared": "^10.9.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.7",
    "lodash-es": "^4.17.21",
    "nuxt": "^3.15.1",
    "pinia": "^2.2.6",
    "qs": "^6.13.1",
    "string-template": "^1.0.0",
    "tippy.js": "^6.3.7",
    "uuid": "^11.0.3",
    "vee-validate": "^4.14.7",
    "vue": "^3.4.29",
    "vue-router": "^4.3.3",
    "vue-tippy": "^6.5.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nuxt/types": "^2.18.1",
    "@nuxtjs/tailwindcss": "^6.12.2",
    "@rushstack/eslint-patch": "^1.8.0",
    "@types/lodash-es": "^4.17.12",
    "@types/qs": "^6.9.17",
    "@types/string-template": "^1.0.6",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-perfectionist": "^4.3.0",
    "eslint-plugin-vue": "^9.23.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^6.2.6",
    "prettier": "^3.3.3",
    "sass": "1.77.6",
    "typescript": "~5.4.5",
    "unplugin-auto-import": "^0.18.6",
    "unplugin-vue-components": "^0.27.5",
    "validate-branch-name": "^1.3.1",
    "vue-tsc": "^2.1.10"
  },
  "packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
